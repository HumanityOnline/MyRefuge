# http://editorconfig.org
root = true

[**.py]
indent_style = space
indent_size = 4

[**.js,**.scss]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,bower.json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
